generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id         String      @id @default(cuid())
  feedback   String
  endereco   Endereco[]
  residentes Residente[]
  veiculos   Veiculo[]
  createdAt  DateTime    @default(now())
}

model Endereco {
  id         String   @id @default(cuid())
  condominio String
  apto       String
  clienteId  String?
  cliente    Cliente? @relation(fields: [clienteId], references: [id])
}

model Residente {
  id            String   @id @default(cuid())
  nome          String
  telefone      String
  email         String
  tipoDocumento String
  documento     String
  parentesco    String?
  clienteId     String?
  cliente       Cliente? @relation(fields: [clienteId], references: [id])
}

model Veiculo {
  id        String   @id @default(cuid())
  cor       String
  modelo    String
  placa     String
  clienteId String?
  cliente   Cliente? @relation(fields: [clienteId], references: [id])
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model Cliente {
  id         String          @id @default(cuid())
  endereco   Endereco[]
  residentes Residentes[]
  veiculos   Veiculos[]
  feedback   String?
  createdAt  DateTime     @default(now())
}

model Residentes {
  id            String      @id @default(cuid())
  nome          String
  telefone      String
  email         String
  tipoDocumento String
  documento     String
  parentesco    String?
  Cliente       Cliente? @relation(fields: [clienteId], references: [id])
  clienteId     String?
}

model Endereco {
  id         String      @id @default(cuid())
  condominio String
  apto       String
  Cliente    Cliente? @relation(fields: [clienteId], references: [id])
  clienteId  String?
}

model Veiculos {
  id        String      @id @default(cuid())
  cor       String
  modelo    String
  placa     String
  Cliente   Cliente? @relation(fields: [clienteId], references: [id])
  clienteId String?
}
